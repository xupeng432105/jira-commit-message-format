{
  "name": "jira-commit-format",
  "displayName": "Jira Commit Format",
  "publisher": "xupeng",
  "description": "A Visual Studio Code extension to customize git commit message format related with JIRA tickets.",
  "keywords": [
    "jira",
    "commit",
    "message",
    "format",
    "git",
    "vscode",
    "extension"
  ],
  "homepage": "https://github.com/xupeng432105/jira-commit-message-format",
  "license": "MIT",
  "icon": "./resources/icon.png",
  "version": "0.0.2",
  "repository": "https://github.com/xupeng432105/jira-commit-message-format/main",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "JCF",
        "title": "Generate commit message"
      },
      {
        "command": "JCF.auth",
        "title": "Re-authenticate"
      },
      {
        "command": "JCF.viewIssue",
        "title": "View issue data"
      },
      {
        "command": "JCF.loadStatus",
        "title": "Load instance statuses"
      },
      {
        "command": "JCF.reload",
        "title": "Reload"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jiraCommitFormat",
          "title": "Jira commit format",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "jiraCommitFormat": [
        {
          "id": "issues",
          "name": "issues",
          "icon": "./resources/icon.svg",
          "contextualTitle": "Jira commit format"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "JCF.auth",
          "group": "jiraCommitFormat",
          "when": "view === 'issues'"
        },
        {
          "command": "JCF.loadStatus",
          "group": "jiraCommitFormat",
          "when": "view === 'issues'"
        },
        {
          "command": "JCF.reload",
          "group": "jiraCommitFormat",
          "when": "view === 'issues'"
        }
      ],
      "view/item/context": [
        {
          "command": "JCF",
          "group": "navigation",
          "when": "view === 'issues'"
        }, 
        {
          "command": "JCF.viewIssue",
          "group": "navigation",
          "when": "view === 'issues'"
        }
      ]
    },
    "configuration": {
        "title": "Jira Commit Format Settings",
        "properties": {
            "JCF.format": {
                "type": "string",
                "default": "{{issue.key}} - {{issue.summary}}",
                "description": "The format of the commit message. Use {{issue.key}} for the issue key and {{issue.summary}} for the issue summary."
            },
            "JCF.statusList": {
                "type": "array",
                "default": ["Open", "In Progress (Implement)", "Reopened"],
                "description": "List of statuses to filter issues. Only issues with these statuses will be shown in the view."
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "clipboardy": "^4.0.0"
  }
}
